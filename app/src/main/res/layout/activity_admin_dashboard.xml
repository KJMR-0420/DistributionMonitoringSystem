<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl1"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".AdminDashboard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:srcCompat="@drawable/upperbg" />

            <Button
                android:id="@+id/btn_pwd"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PWD Section"
                android:backgroundTint="@color/cl1"
                android:textColor="@color/cl3"/>
            <Button
                android:id="@+id/btn_sap"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social Amelioration Program Section"
                android:backgroundTint="@color/cl1"
                android:textColor="@color/cl3"/>
            <Button
                android:id="@+id/btn_senior"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senior Citizen Section"
                android:backgroundTint="@color/cl1"
                android:textColor="@color/cl3"/>
            <Button
                android:id="@+id/btn_solo"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solo Parent Section"
                android:backgroundTint="@color/cl1"
                android:textColor="@color/cl3"/>
            <Button
                android:id="@+id/btn_vaccine"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flu Vaccine Section"
                android:backgroundTint="@color/cl1"
                android:textColor="@color/cl3"/>
            <Button
                android:id="@+id/btn_free"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Milk Section"
                android:backgroundTint="@color/cl1"
                android:textColor="@color/cl3"/>
            <Button
                android:id="@+id/btn_sms"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send SMS"
                android:backgroundTint="@color/cl1"
                android:textColor="@color/cl3"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>