<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@color/cl1">

            <TextView
                android:id="@+id/nameindicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="25dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pwd_name"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_below="@id/nameindicate"
                android:textColor="@color/cl3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="25dp"
                android:id="@+id/addressindicate"
                android:textColor="@color/white"
                android:layout_below="@id/nametext"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pwd_address"
                android:text="Address"
                android:textSize="25sp"
                android:textColor="@color/cl3"
                android:layout_below="@id/addressindicate"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact:"
                android:textSize="25dp"
                android:id="@+id/contactindicate"
                android:textColor="@color/white"
                android:layout_below="@id/addresstext"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pwd_contact"
                android:text="Contact"
                android:textSize="25sp"
                android:textColor="@color/cl3"
                android:layout_below="@id/contactindicate"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/pwdeditL"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cl5"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pwdediticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit"/>
            <ImageView
                android:id="@+id/pwddeleteicon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/delete"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>